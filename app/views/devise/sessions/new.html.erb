<h2 class="text log-in">Log in</h2>
<div class="row">
  <div class="col-md-12">
    <%= form_for(resource, as: resource_name, html: {class: 'form-horizontal', role: 'form'},
        url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :login %>
        </div>
        <div class="col-md-5">
          <%= f.text_field :login, class: 'form-control', autofocus: true, autocomplete: "email or username" %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :password %>
        </div>

        <div class="col-md-5">
          <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <div class="col-md-offset-3 col-md-9">
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %>
                Remember me
              </label>
            </div>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-5">
          <%= f.submit "Log in", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <div class="col-md-offset-3 col-md-9 sign-link">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</div>
