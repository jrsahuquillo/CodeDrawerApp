<div class="devise-container">
  <h1 class="text text-center devise-logo"><%= octicon 'archive', height: 36 %> Codedrawer</h1>
  <h4 class="text text-center forgot-password">Forgot your password?</h2>
  <div class="row">
    <div class="col-md-12">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal', role: 'form' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <div class="control-label col-md-12">
            <%= f.label :email %><br />
          </div>
          <div class="col-md-12">
            <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-3 col-md-12">
            <%= f.submit "Send me reset password instructions", class: 'btn btn-warning btn-block' %>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <div class="col-md-offset-3 col-md-12 sign-link">
          <%= render "devise/shared/links" %>
        </div>
      </div>

    </div>
  </div>
</div>
