<h2 class="change-password">Change your password</h2>
<div class="row">
  <div class="col-md-12">
    <%= form_for(resource, as: resource_name, html: { method: :put, class: 'form-horizontal', role: 'form' }, url: password_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>


      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :password, "New password" %><br />
        </div>
        <div class="col-md-5">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, class: 'form-control', autofocus: true, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :password_confirmation, "Confirm new password" %><br />
        </div>
        <div class="col-md-5">
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-5">
          <%= f.submit "Change my password", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <div class="control-label col-md-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>