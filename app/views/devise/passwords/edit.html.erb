<div class="devise-container">
  <h1 class="text text-center devise-logo"><%= octicon 'archive', height: 36 %> Codedrawer</h1>
  <h4 class="text text-center change-password">Change your password</h2>
  <div class="row">
    <div class="col-md-12">
      <%= form_for(resource, as: resource_name, html: { method: :put, class: 'form-horizontal', role: 'form' }, url: password_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>


        <div class="form-group">
          <div class="control-label col-md-12">
            <%= f.label :password, "New password" %><br />
          </div>
          <div class="col-md-12">
            <% if @minimum_password_length %>
              <em><small>(<%= @minimum_password_length %> characters minimum)</small></em><br />
            <% end %>
            <%= f.password_field :password, class: 'form-control', autofocus: true, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-md-12">
            <%= f.label :password_confirmation, "Confirm new password" %><br />
          </div>
          <div class="col-md-12">
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-3 col-md-12">
            <%= f.submit "Change my password", class: 'btn btn-warning btn-block' %>
          </div>
        </div>
      <% end %>

      <div class="text text-center form-group sign-link">
        <div class="control-label col-md-12">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>