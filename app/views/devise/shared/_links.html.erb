
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot-password-link' %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
<div class="or-oauth-line"> &nbsp &nbsp &nbsp OR &nbsp &nbsp &nbsp &nbsp </div>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to (octicon 'mark-github', height: 24) + "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'btn btn-lg btn-secondary github-oauth' %><br />
  <% end %>
<% end %>

<%- if controller_name != 'sessions' %>
  <div class="log-in-here">Have already an account? <%= link_to "Log in", new_session_path(resource_name), class: 'log-in-link' %></div><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="sign-up-here">Don't have an account? <%= link_to "Sign up here", new_registration_path(resource_name), class: 'sign-up-link' %></div><br />
<% end %>