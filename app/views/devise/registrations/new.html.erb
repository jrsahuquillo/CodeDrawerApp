<%= render 'shared/ribbon'%>
<div class="devise-container">
  <h1 class="text text-center devise-logo"><%= octicon 'archive', height: 36 %> Codedrawer</h1>
  <div class="row">
    <div class="col-md-12">
      <%= form_for(resource, as: resource_name, html: {class: 'form-horizontal', role: 'form'},
          url: registration_path(resource_name)) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <div class="control-label col-sm-12 col-md-12">
            <%= f.label :email %>
          </div>
          <div class="col-md-12">
            <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-md-12">
            <%= f.label :username %>
          </div>
          <div class="col-md-12">
            <%= f.text_field :username, class: 'form-control', autofocus: true, autocomplete: "username" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-md-12">
            <%= f.label :password %>
          </div>

          <div class="col-md-12">
            <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
            <% if @minimum_password_length %>
              <em><small>(<%= @minimum_password_length %> characters minimum)</small></em>
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-md-12">
            <%= f.label :password_confirmation %><br />
          </div>
          <div class="col-md-12">
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-3 col-md-12">
            <%= f.submit "Sign up", class: 'btn btn-warning btn-block' %>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-12 sign-link">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
