<div class="container-fluid">
  <div class='row'>
    <div class='col-sm'>
      <%= form_for([@drawer, @codetool], html: {class: "form-horizontal", role: "form"}) do |f| %>

        <% if @codetool.errors.any? %>
          <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <div class="bg-heading">
              <div class="h2 bg-title">
                <%= pluralize(@codetool.errors.count, "error") %>
                prohibited this drawer from being saved:
              </div>

              <div class="bg-body">
                <ul>
                  <% @codetool.errors.full_messages.each do |msg|  %>
                    <li>
                      <%= msg %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div class='form-group'>
          <div class='control-label col-sm'>
            <%= f.label :title %>
          </div>
          <div class='col-sm'>
            <%= f.text_field :title, class: 'form-control', placeholder: 'Title of codetool', autofocus: true %>
          </div>
        </div>

        <div class='form-group'>
          <div class='control-label col-sm'>
            <%= f.label :content %>
          </div>
          <div class='col-sm'>
            <%= f.text_area :content, rows: 15, class: 'form-control', placeholder: 'Content of codetool' %>
          </div>
        </div>

        <div class="p-2 form-footer d-flex flex-row justify-content-between">
          <div class="public-check">
            <div class='form-check'>
              <div class='control-label col-sm'>
                <%= f.label :public %>
              </div>
              <div class='control-label col-sm'>
                <%= f.check_box :public, id: 'public_checkbox' %>&nbsp;
                <%= f.label :public, class: 'form-check-label' do %>
                  <%= octicon "organization", height: 36 %>
                <% end %>
              </div>
            </div>
          </div>

          <%= link_to 'https://www.markdownguide.org/basic-syntax/', class: 'markdown-link', target: '_blank', title: 'Markdown Syntax' do %>
            <%= octicon 'markdown', height: 36 %>
          <% end %>
        </div>

        <div class='form-group'>
          <div class='col-md-offset-1 col-sm submit-button'>
            <%= f.submit class: 'btn btn-primary pull-right' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
