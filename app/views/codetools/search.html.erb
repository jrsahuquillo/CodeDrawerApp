<% if @searched_codetools.present? %>
  <h3 class='text-center codetool-form'>Searched codetools</h3>
  <ul>
    <% @searched_codetools.each do |codetool| %>
      <%= render 'codetool_item', codetool: codetool, drawer: codetool.drawer %>
    <% end %>
  </ul>
<% else %>
    <p class="blank-search">There are no codetools containing the term(s) <%= params[:search] %>.</p>
<% end %>