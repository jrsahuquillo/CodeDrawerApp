<div id="sidebar"class="d-flex flex-column bd-highlight mb-3">
  <div class="new-drawer-button">
    <div class="drawer-item-sidebar new-drawer-item">
      <%= link_to new_drawer_path, class: 'drawer-link-sidebar', 'data-turbolinks': false do %>
        <div class="drawer-item-menu">
          <div class="h2 new-drawer-item-menu">
            <%= octicon "plus", height: 24 %>
            <span class="new-drawer-text">New Drawer</span>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="drawers-sidebar">
    <div class="drawers-list-sidebar full-height">
      <div class="drawer-item-sidebar <%= 'active' if params[:controller] == 'drawers' %>">
        <%= link_to favorite_codetools_path, class: 'drawer-link-sidebar' do %>
          <div class="drawer-item-menu">
            <div class="h4">
              <%= octicon "star" %>&nbsp;
              <span>Favorite Codetools</span>
            </div>
          </div>
        <% end %>
      </div>

      <div id="collaborated-drawers-list">
        <% collaborated_drawers.each do |drawer| %>
          <div class="drawer-item-sidebar <%= check_active_link(drawer.id) %>" id="<%= dom_id(drawer) %>">
            <%= link_to drawer_codetools_path(drawer), class: 'drawer-link-sidebar', 'data-turbolinks': false do %>
              <div class="drawer-item-menu">
                <div class="h4">
                  <span class="drawer-list-icon">
                    <%= octicon "primitive-square" %>
                  </span>
                  &nbsp;
                  <%= drawer.title.truncate(50) %>
                  <% if drawer.friends.present? %>
                    <span class='collaborated-drawer-icon float-right'><%= octicon 'organization'%></span>
                  <% end%>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <div id="drawers-list" data-url="<%= sort_drawer_drawers_path %>">
        <% drawers ||= sorted_drawers %>
        <% drawers.each do |drawer| %>
          <div class="drawer-item-sidebar <%= check_active_link(drawer.id) %>" id="<%= dom_id(drawer) %>">
            <%= link_to drawer_codetools_path(drawer), class: 'drawer-link-sidebar', 'data-turbolinks': false do %>
              <div class="drawer-item-menu">
                <div class="h4">
                  <span class="drawer-list-icon">
                    <%= octicon "kebab-vertical", height: 24 %>
                  </span>
                  &nbsp;
                  <%= drawer.title.truncate(50) %>
                  <% if drawer.friends.present? %>
                    <span class='collaborated-drawer-icon float-right'><%= octicon 'organization'%></span>
                  <% end%>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
