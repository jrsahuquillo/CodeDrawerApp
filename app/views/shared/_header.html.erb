<header role="banner">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/"><%= octicon "archive", height: 36, class: 'logo' %>  Codedrawer</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
        <% if current_user%>
        <li class="nav-item active">
          <%= form_tag(search_path(@drawer), method: "get", class: "form-inline my-2 my-lg-1", id: "search-form") do %>
              <%= text_field_tag :search, params[:search], class: "form-control mr-sm-2", placeholder: "Search", 'aria-label': 'Search' %>
              <%= button_tag(type: "submit", class: "btn btn-light my-2 my-sm-0 search") do %>
                  <%= octicon 'search'%>
              <% end %>
          <% end %>
        </li>
        <li class="nav-item active">
          <%= link_to "Drawers List", root_path, class: 'nav-link' %>
        </li>
        <li class="nav-item active">
          <%= link_to "New Drawer", new_drawer_path, class: 'nav-link' %>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="https://www.markdownguide.org/basic-syntax/">Markdown Syntax</a>
        </li>
          <li class="nav-item active">
            <%= link_to "Search", search_path, class: 'nav-link' %>
          </li>
          <% end %>
        <li class="nav-item active dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= user_signed_in? ? "Signed in as #{current_user.username}" : "Start session" %>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <% if user_signed_in? %>
              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'dropdown-item', id: 'sign-in-menu' %>
            <% else %>
              <%= link_to "Sign in", new_user_session_path, class: 'dropdown-item', id: 'sign-out-menu' %>
              <%= link_to "Sign up", new_user_registration_path, class: 'dropdown-item', id: 'sign-up-menu' %>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</header>
