<div class="detail-favorites">
  <div class="row">
    <div class="col-sm-6">
      <div class="h1 drawer-detail-title"><%= octicon "star", height: 42 %> Favorite Codetools</div>
    </div>
  </div>
</div>

<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-md-12">
      <div id="favorite-codetools-list" class="col-md-12">
        <% if @favorite_codetools.any? %>
          <% @favorite_codetools.each do |codetool| %>
            <%= render './codetools/codetool_item', codetool: codetool %>
          <% end %>
        <% else %>
          <p>There are no codetools to show. Search in <%= link_to 'your friends codetools', search_friends_path %> to add favorites.</p>
        <% end %>
      </div>

    </div>
  </div>
</div>
